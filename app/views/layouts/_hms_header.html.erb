<header class="hms-common">
  <div class="app-menu-container">
    <div id="kartta-app-menu" ></div>
  </div>
  <nav class='secondary'>
    <ul>
      <li><%= link_to_unless((current_page?(maps_url) && !current_page?(maps_url(:show_warped =>1))),t('shared.nav.view_maps'), maps_url) { "<span>#{t('shared.nav.view_maps')}</span>".html_safe } %></li>
      <li><%= link_to_unless_current(t('shared.nav.add_map'), new_map_path) { "<span>#{t('shared.nav.add_map')}</span>".html_safe } %></li>
      <li><%= link_to_unless_current(t('home.index.quick_place'), quick_maps_path) { "<span>#{t('home.index.quick_place')}</span>".html_safe } %></li>
<% if false %>
      <li><%= link_to_unless_current(t('shared.nav.privacy'), privacy_path) { "<span>#{t('shared.nav.privacy')}</span>".html_safe } %></li>
      <li><%= link_to_unless_current(t('shared.nav.help'), help_path) { "<span>#{t('shared.nav.help')}</span>".html_safe } %></li>
      <li><%= link_to_unless_current(t('shared.nav.about'), about_path) { "<span>#{t('shared.nav.about')}</span>".html_safe } %></li>
<% end %>
    </ul>

    <% if user_signed_in? %>
      <div class="dropdown user-menu logged-in">
        <a class="hms-dropdown-toggle" data-toggle="dropdown" href="#">
          <span class="user-button">
            <span class="username"><%= current_user.login %></span>
            <b class="caret"></b>
          </span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to t('shared.header.my_maps'), my_maps_path(current_user) %></li>
          <li><%= link_to t('shared.header.my_activity'), user_activity_path(current_user) %></li>
          <li><%= link_to t('shared.header.settings'), edit_user_path %></li>
          <li class="divider"></li>
          <li></li>
          <li><%= link_to t('shared.header.log_out'), destroy_user_session_path, :method => :delete %></li>
        </ul>
      </div>
    <% else %>
      <ul class="user-menu">
        <li class="compact-hide">
          <%= link_to t('shared.header.log_in'), new_user_session_path %>
        </li>
      </ul>
    <% end %>

  </nav>

</header>
